@using Microsoft.AspNetCore.Identity
@using Core.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" asp-controller="HomeAdmin" asp-action="Index">Admin</a>
        </li>

        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" >Hello @UserManager.GetUserName(User)!</a>
        </li>

        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" asp-controller="Accounts" asp-action="Logout">Logout</a>
        </li>



    }

    else
    {

        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" asp-controller="Accounts" asp-action="Login">Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" asp-controller="Accounts" asp-action="Register">Register</a>
        </li>
    }
