                                                <p class="item-intro text-muted">@item.Title</p>




                                                <img class="img-fluid d-block mx-auto" style="height:450px; width:360px" src="~/AdminRoot/img/protofileitem/@item.ImageUrl" alt="Not Image" />
                                                <p>@item.Description</p>
                                                <ul class="list-inline">

                                                    <li>CompanyName: @item.Company</li>
                                                    <li>CategoryType: @CatogryName</li>

                                                    <li>Date: @item.Date.Day/@item.Date.Month/@item.Date.Year</li>
                                                    <li>Gender : @item.gendertype </li>
                                                    <li>location : @item.location </li>
                                                    <li>Price : @item.Price  EGP </li>







                                                </ul>
                                                <button class="btn btn-primary" type="button" id="target" onclick="fun()">

                                                    MaKe Order
                                                </button>

                                                <button class="btn btn-dark" data-dismiss="modal" type="button" onclick="">
                                                    <i class="fas fa-times mr-1"></i>
                                                    Close
                                                </button>

                                                <hr />
                                                <div class="container" id="Formhidden" style="display:none">
                                                    <div class="text-center">
                                                        <h2 class="section-heading text-uppercase">  MaKe Order</h2>

                                                    </div>
                                                    <form id="contactForm" name="sentMessage" novalidate="novalidate">
                                                        <div class="row align-items-stretch mb-5">
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <input class="form-control" id="name" type="text" placeholder="Your Name *" required="required" data-validation-required-message="Please enter your name." />
                                                                    <p class="help-block text-danger"></p>
                                                                </div>
                                                                <div class="form-group">
                                                                    <input class="form-control" id="email" type="email" placeholder="Your Email *" required="required" data-validation-required-message="Please enter your email address." />
                                                                    <p class="help-block text-danger"></p>
                                                                </div>
                                                                <div class="form-group mb-md-0">
                                                                    <input class="form-control" id="phone" type="tel" placeholder="Your Phone *" required="required" data-validation-required-message="Please enter your phone number." />
                                                                    <p class="help-block text-danger"></p>
                                                                </div>
                                                            </div>








                                                            <div class="col-md-6">

                                                                <div class="form-group form-group-textarea mb-md-0">
                                                                    <textarea class="form-control" id="message" placeholder="Your Message " required="required" data-validation-required-message="Please enter a message."></textarea>
                                                                    <p class="help-block text-danger"></p>
                                                                </div>

                                                                <div class="form-group form-group-textarea mb-md-0">
                                                                    <textarea class="form-control" id="Location" placeholder="Your Location *" required="required" data-validation-required-message="Please enter a message."></textarea>
                                                                    <p class="help-block text-danger"></p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="text-center">
                                                            <div id="success"></div>
