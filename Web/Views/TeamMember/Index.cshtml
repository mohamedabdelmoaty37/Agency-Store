
@model IEnumerable<Core.Entities.TeamMember>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    int indexer = 0;
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Team Member Page </h1>
    <p class="mb-4">
        DataTables is Date of Team Member Can Add New Item And Manage Options (Edit Or Display Details Or Delete)

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">

                <h6 class="m-0 font-weight-bold text-dark">Team Member Items</h6>
                <br />

                <a asp-action="Create" class="btn btn-info">Create New Team Member Item</a>


            </div>
            <div class="card-body">
                <div class="table-responsive">



                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color:darkgrey">
                                <th width="30px" >
                                   N
                                </th>
                                <th width="100px">
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th width="100px">
                                    @Html.DisplayNameFor(model => model.TitleJob)
                                </th>
                                <th width="80px">
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </th>
                                <th width="80px">
                                    @Html.DisplayNameFor(model => model.FBUrllink)
                                </th>
                                <th width="90px">
                                    @Html.DisplayNameFor(model => model.TWUrllink)
                                </th>
                                <th width="80px">
                                    @Html.DisplayNameFor(model => model.LinkedInUrl)
                                </th>
                                <th width="700px">Manage options</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {

                                var Image = item.ImageUrl ?? "TeamMemberimg.jpg";

                                <tr>
                                    <td width="30px" style="background-color:rgba(0,0,0,.15)">  
                                        @(indexer=indexer+1)
                                    </td>
                                    <td width="200px">
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td width="100px">
                                        @Html.DisplayFor(modelItem => item.TitleJob)
                                    </td>
                                    <td style="width:80px">
                                        <img style="width:45px;height:45px  ; margin:5px " src="~/AdminRoot/img/Teammember/@Image" />
                                    </td>
                                    <td style="width:100px">
                                        @Html.DisplayFor(modelItem => item.FBUrllink)
                                    </td>
                                    <td style="width:100px">
                                        @Html.DisplayFor(modelItem => item.TWUrllink)
                                    </td>
                                    <td style="width:100px">
                                        @Html.DisplayFor(modelItem => item.LinkedInUrl)
                                    </td>
                                    <td style="width:400px">
                                        <a asp-action="Edit" class=" btn btn-info btn-circle btn-lg" asp-route-id="@item.Id"> <i class="fa fa-check"></i> </a>
                                        <a asp-action="Details" class=" btn btn-warning btn-circle btn-lg" asp-route-id="@item.Id"> <i class="fa fa-info-circle "></i></a>
                                        <a asp-action="Delete" class=" btn btn-danger btn-circle btn-lg" onclick=" return confirm(' Are you sure to Delete this Item')" asp-route-id="@item.Id"> <i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*fa-exclamation-triangle*@
                </div>
            </div>
        </div>


         



