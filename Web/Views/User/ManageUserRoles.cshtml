
@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;

    ViewData["Title"] = "EditUserRoles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
  




<div class="card " style="width :60% ;margin-left:50px">
    <div class="card-header">
        <h2>Add or remove users from this role</h2>

       
    </div>
    @if (Model.Count > 0)
    {

        <form method="post" asp-action="ManageUserRoles">


            <div class="card-body">



                @for (int i = 0; i < Model.Count; i++)

                {

                    <input type="hidden" id="userId"  name="userId" value="@ViewBag.userId" />

                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
                <a asp-action="Index"
                   class="btn btn-primary" style="width:auto">Cancel</a>
            </div>

        </form>


    }
    else
    {
        <h3 class="text text-danger" style="margin:10px">  No Email Match Search ! </h3>


        <div class="card-footer">

        </div>
    }

</div>
@if (Model.Count < 20)
{
    <div style="height :370px">


    </div>
}




