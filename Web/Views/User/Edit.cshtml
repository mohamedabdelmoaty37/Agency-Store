@model Web.ViewModels.UserviewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block ">
                        <img src="~/assets/img/register.jpg " style="height:840px; width:490px ;" alt="login " />

                    </div>




                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="btn  btn-user btn-info  " style="width:530px"> Edit New User!</h1>
                            </div>
                            <form class="user" asp-action="Edit" method="post" enctype="multipart/form-data">
                             
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />
                              
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" asp-for="FirstName"
                                           placeholder="FirstName...">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" asp-for="LastName"
                                           placeholder="LastName...">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" asp-for="Email"
                                           placeholder="Email Address">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>





                                <div class="form-group">

                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" asp-for="Address"
                                               placeholder="Address...">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                </div>


                                <div class="form-group ">

                                    <input type="text" class="form-control form-control-user" asp-for="phone"
                                           placeholder="Phone Number ">
                                    <span asp-validation-for="phone" class="text-danger"></span>


                                </div>


                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" value="@Model.Password" class="form-control form-control-user"
                                               asp-for="Password" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>




                                    <div class="col-sm-6">
                                        <input type="password" value="@Model.Password" class="form-control form-control-user"
                                               asp-for="ConfirmPassword" placeholder="Repeat Password">

                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>
                                </div>


                                <div class="form-group ">
                                    <label class="col-3 " style="text-size-adjust:auto ;margin-left:13px ;color:black">Your Images : </label>

                                    <img style="width:90px;height:90px" src="~/img/ImageUsers/@Model.ImageUrl" alt="Null Image" />

                                </div>

                                <div class="form-group ">
                                    <div class="row">
                                        <div class="col-3 ">
                                            <label style="text-size-adjust:auto ;margin-left:13px ; margin-top:8px;color:black">Edit Images : </label>
                                        </div>
                                        <div class="col-8">
                                            <input type="file" class=" form-control form-control-user " asp-for="File">
                                        </div>
                                    </div>
                                </div>


                                <hr>
                                <div style="margin-left:100px ;margin-top:30px">
                                    <button type="submit" class="btn btn-success btn-lg ">  <i class="fa fa-check "> </i> Edit  </button>
                                    <a asp-action="Index" class="btn btn-danger btn-lg" asp-controller="User">  <i class="fa fa-exclamation-circle "> </i> Back to List</a>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>




















